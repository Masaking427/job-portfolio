---
import type { SkillDetailItem } from "../data/types";

interface Props {
    item: SkillDetailItem;
}

const { item } = Astro.props;
---

<div class="flex flex-col gap-1">
    <div class="flex justify-between items-center">
        <h4 class="font-bold text-slate-900 dark:text-white">
            {item.name}
        </h4>
        <span
            class={`text-xs font-semibold px-2 py-0.5 rounded ${item.colorClass.badgeBg} ${item.colorClass.badgeText}`}
        >
            Top {item.percentage}%
        </span>
    </div>
    <div class="w-full bg-slate-100 rounded-full h-1.5 dark:bg-slate-800">
        <div
            class={`h-1.5 rounded-full ${item.colorClass.bg}`}
            style={`width: ${item.percentage}%`}
        >
        </div>
    </div>
    <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">
        {item.description}
    </p>
</div>
