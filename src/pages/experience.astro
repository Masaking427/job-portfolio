---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteFooter from '../components/SiteFooter.astro';
import SiteHeader from '../components/SiteHeader.astro';

const experiences = [
  {
    icon: 'work',
    iconClass: 'border-primary text-primary dark:border-primary',
    role: 'シニアプロダクトデザイナー',
    company: 'TechFlow',
    companyClass: 'text-primary',
    badge: '在籍中',
    period: '2022年1月 - 現在',
    location: 'San Francisco, CA (Hybrid)',
    skills: ['Design Systems', 'UX Research', 'Figma', 'Agile'],
    challenge:
      '既存オンボーディングで離脱率が40%に達し、売上機会の損失が発生。利用開始5分以内に、主要価値が伝わらないという声が多数ありました。',
    actions: [
      '20名以上のユーザーインタビューを実施し、ボトルネックを特定。',
      '部門横断ワークショップを主導し、最短で価値体験に到達するユーザージャーニーを再設計。',
      'A/Bテスト向けにオンボーディング導線を3案プロトタイプ化。',
    ],
    result:
      'リリース後のQ3で解約率を15%改善。新導線によりユーザー活性化率が22%向上し、推定$1.2MのARR増加に貢献。',
  },
  {
    icon: 'design_services',
    iconClass: 'border-slate-200 text-slate-400 dark:border-slate-700',
    role: 'プロダクトデザイナー',
    company: 'Creative Solutions',
    companyClass: 'text-slate-600 dark:text-slate-300',
    period: '2019年6月 - 2021年12月',
    location: 'Austin, TX',
    skills: ['UI Design', 'Prototyping', 'Client Management'],
    challenge:
      'Fintechスタートアップ案件で、3カ月という短期間でモバイルアプリMVPが必要な状況。ブランド定義とユーザー調査が未整備でした。',
    actions: [
      'モジュール型Design Systemを立ち上げ、設計・実装速度を向上。',
      '週次レビューを運営し、MVP必須機能と将来機能の優先順位を整理。',
    ],
    result:
      '予定通りMVPをリリースし、クライアントのSeries A（$5M）調達に寄与。公開後6カ月間、App Store評価4.8を維持。',
  },
  {
    icon: 'terminal',
    iconClass: 'border-slate-200 text-slate-400 dark:border-slate-700',
    role: 'ジュニアUXデザイナー',
    company: 'StartUp Inc',
    companyClass: 'text-slate-600 dark:text-slate-300',
    period: '2017年5月 - 2019年5月',
    location: 'New York, NY',
    skills: ['Wireframing', 'User Testing', 'HTML/CSS'],
    challenge:
      '社内ダッシュボードの操作効率が低く、サポートチームのチケット対応時間が必要以上に30%増加していました。',
    actions: [
      '現行業務フローを可視化し、冗長ステップを特定。',
      '情報設計を見直し、優先情報に素早く到達できるUIへ再設計。',
    ],
    result:
      'チケット解決時間を25%短縮し、同年度は増員なしで問い合わせ増加に対応可能な体制を実現。',
  },
];
---

<BaseLayout
  title="職務経歴"
  bodyClass="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 font-display min-h-screen flex flex-col"
>
  <SiteHeader currentPath="/experience" />

  <main class="w-full flex-grow px-4 py-12 md:px-8 lg:px-12">
    <div class="mx-auto max-w-4xl">
      <div class="mb-16 space-y-4">
        <h2 class="text-4xl font-black tracking-tight text-slate-900 dark:text-white md:text-5xl">職務経歴</h2>
        <p class="max-w-2xl text-lg leading-relaxed text-slate-600 dark:text-slate-400">
          7年以上にわたり、拡張性の高いデジタルプロダクト設計、Design Systemの推進、
          そしてユーザー課題と事業目標をつなぐ改善を継続してきました。
        </p>
      </div>

      <div class="relative space-y-12">
        {
          experiences.map((item) => (
            <article class="timeline-line relative pl-0 md:pl-20">
              <div class={`absolute left-0 top-1 z-10 hidden h-14 w-14 items-center justify-center rounded-full border-2 bg-white shadow-sm md:flex dark:bg-slate-800 ${item.iconClass}`}>
                <span class="material-symbols-outlined text-2xl">{item.icon}</span>
              </div>

              <div class="group relative rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition-all hover:shadow-md dark:border-slate-800 dark:bg-[#15202b]">
                <div class="mb-6 flex flex-col justify-between gap-4 border-b border-slate-100 pb-6 dark:border-slate-700 sm:flex-row sm:items-start">
                  <div>
                    <h3 class="text-2xl font-bold text-slate-900 dark:text-white">{item.role}</h3>
                    <div class={`mt-1 flex items-center gap-2 font-medium ${item.companyClass}`}>
                      <span class="material-symbols-outlined text-[18px]">business</span>
                      <span>{item.company}</span>
                    </div>
                  </div>
                  <div class="flex flex-col items-start gap-1 sm:items-end">
                    {item.badge && (
                      <span class="rounded-full bg-primary/10 px-3 py-1 text-xs font-bold text-primary dark:bg-primary/20">
                        {item.badge}
                      </span>
                    )}
                    <span class="text-sm text-slate-500 dark:text-slate-400">{item.period}</span>
                    <span class="text-xs text-slate-400 dark:text-slate-500">{item.location}</span>
                  </div>
                </div>

                <div class="mb-8 flex flex-wrap gap-2">
                  {
                    item.skills.map((skill) => (
                      <span class="rounded bg-slate-100 px-2.5 py-1 text-xs font-medium text-slate-600 dark:bg-slate-800 dark:text-slate-300">
                        {skill}
                      </span>
                    ))
                  }
                </div>

                <div class="space-y-8">
                  <div class="grid grid-cols-[24px_1fr] gap-4">
                    <div class="mt-1 flex h-6 w-6 items-center justify-center rounded bg-red-100 text-red-600 dark:bg-red-900/30 dark:text-red-400">
                      <span class="material-symbols-outlined text-[16px]">psychology_alt</span>
                    </div>
                    <div>
                      <h4 class="mb-2 text-sm font-bold uppercase tracking-wider text-slate-900 dark:text-slate-100">
                        課題
                      </h4>
                      <p class="text-base leading-relaxed text-slate-600 dark:text-slate-300">{item.challenge}</p>
                    </div>
                  </div>

                  <div class="grid grid-cols-[24px_1fr] gap-4">
                    <div class="mt-1 flex h-6 w-6 items-center justify-center rounded bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400">
                      <span class="material-symbols-outlined text-[16px]">construction</span>
                    </div>
                    <div>
                      <h4 class="mb-2 text-sm font-bold uppercase tracking-wider text-slate-900 dark:text-slate-100">
                        取り組み
                      </h4>
                      <ul class="list-none space-y-2 text-base leading-relaxed text-slate-600 dark:text-slate-300">
                        {
                          item.actions.map((action) => (
                            <li class="flex items-start gap-2">
                              <span class="mt-2 block h-1.5 w-1.5 shrink-0 rounded-full bg-primary/60"></span>
                              <span>{action}</span>
                            </li>
                          ))
                        }
                      </ul>
                    </div>
                  </div>

                  <div class="rounded-lg border border-green-100 bg-green-50 p-5 dark:border-green-900/30 dark:bg-green-900/10">
                    <div class="grid grid-cols-[24px_1fr] gap-4">
                      <div class="mt-1 flex h-6 w-6 items-center justify-center rounded bg-green-100 text-green-700 dark:bg-green-900/40 dark:text-green-400">
                        <span class="material-symbols-outlined text-[16px]">trending_up</span>
                      </div>
                      <div>
                        <h4 class="mb-2 text-sm font-bold uppercase tracking-wider text-green-800 dark:text-green-400">
                          成果・インパクト
                        </h4>
                        <p class="text-base leading-relaxed text-slate-700 dark:text-slate-300">{item.result}</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </article>
          ))
        }

        <section class="relative pl-0 md:pl-20">
          <div class="absolute left-0 top-1 z-10 hidden h-14 w-14 items-center justify-center rounded-full border-2 border-slate-200 bg-white text-slate-400 shadow-sm md:flex dark:border-slate-700 dark:bg-slate-800">
            <span class="material-symbols-outlined text-2xl">school</span>
          </div>
          <div class="mt-12 rounded-xl border border-slate-200 bg-slate-50 p-6 dark:border-slate-800 dark:bg-[#15202b]">
            <h3 class="mb-4 text-xl font-bold text-slate-900 dark:text-white">学歴</h3>
            <div class="flex flex-col gap-4 sm:flex-row sm:justify-between">
              <div>
                <p class="font-bold text-slate-900 dark:text-white">インタラクションデザイン学士</p>
                <p class="text-sm text-slate-600 dark:text-slate-400">University of Arts &amp; Design</p>
              </div>
              <div class="text-left sm:text-right">
                <p class="text-sm text-slate-500 dark:text-slate-400">2013 - 2017</p>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </main>

  <SiteFooter />
</BaseLayout>
