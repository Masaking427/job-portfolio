---
import BaseLayout from "../layouts/BaseLayout.astro";
import SiteFooter from "../components/SiteFooter.astro";
import SiteHeader from "../components/SiteHeader.astro";
import {
  certifications,
  mindsetCards,
  sideWork,
  skillGroups,
  toolBadges,
} from "../data/skillsData";
---

<BaseLayout
  title="スキルと仕事観"
  bodyClass="bg-background-light dark:bg-background-dark text-[#0d141b] dark:text-slate-200 font-display transition-colors duration-200"
>
  <div
    class="relative flex h-auto min-h-screen w-full flex-col overflow-x-hidden"
  >
    <SiteHeader currentPath="/skills" />

    <main
      class="flex w-full flex-1 flex-col items-center px-4 py-10 sm:px-6 lg:px-8"
    >
      <div class="flex w-full max-w-5xl flex-col gap-12">
        <div class="flex flex-col gap-4 text-center md:text-left">
          <h1
            class="text-4xl font-black leading-tight tracking-[-0.033em] text-slate-900 dark:text-white md:text-5xl"
          >
            スキルと専門性
          </h1>
          <p
            class="max-w-2xl text-lg font-normal leading-relaxed text-slate-500 dark:text-slate-400 md:text-xl"
          >
            プロダクト企画から分析、要件定義、実装までを一気通貫で推進するための実務スキルを整理しています。
          </p>
        </div>

        <section class="flex flex-col gap-8">
          <div
            class="flex items-center justify-between border-b border-slate-200 pb-4 dark:border-slate-800"
          >
            <h2
              class="flex items-center gap-3 text-2xl font-bold tracking-tight text-slate-900 dark:text-white"
            >
              <span class="material-symbols-outlined text-primary"
                >terminal</span
              >
              技術スタックとツール
            </h2>
          </div>

          <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-12">
            {
              skillGroups.map((group) => (
                <div class="rounded-xl border border-slate-100 bg-white p-6 shadow-sm dark:border-slate-800 dark:bg-slate-900 lg:col-span-6">
                  <h3 class="mb-6 flex items-center gap-2 text-lg font-bold text-slate-800 dark:text-slate-200">
                    <span class="material-symbols-outlined text-sm text-primary">
                      {group.icon}
                    </span>
                    {group.title}
                  </h3>
                  <div class="flex flex-col gap-5">
                    {group.items.map((item) => (
                      <div class="group">
                        <div class="mb-1 flex justify-between">
                          <span class="text-sm font-medium text-slate-700 dark:text-slate-300">
                            {item.name}
                          </span>
                          <span
                            class={`text-sm font-medium ${item.primary ? "text-primary" : "text-slate-500 dark:text-slate-400"}`}
                          >
                            {item.level}
                          </span>
                        </div>
                        <div class="h-2 w-full rounded-full bg-slate-100 dark:bg-slate-800">
                          <div
                            class="h-2 rounded-full bg-primary transition-all duration-1000 group-hover:bg-blue-500"
                            style={`width: ${item.width}%`}
                          />
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              ))
            }

            <div class="lg:col-span-12">
              <div
                class="rounded-xl border border-slate-100 bg-white p-6 shadow-sm dark:border-slate-800 dark:bg-slate-900"
              >
                <h3
                  class="mb-4 flex items-center gap-2 text-lg font-bold text-slate-800 dark:text-slate-200"
                >
                  <span class="material-symbols-outlined text-sm text-primary"
                    >build</span
                  >
                  ツール・ワークフロー
                </h3>
                <div class="flex flex-wrap gap-2">
                  {
                    toolBadges.map((tool) => (
                      <span class="inline-flex items-center gap-1.5 rounded-lg border border-slate-200 bg-slate-100 px-3 py-1.5 text-sm font-medium text-slate-700 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-300">
                        <span class="material-symbols-outlined text-sm">
                          {tool.icon}
                        </span>
                        {tool.name}
                      </span>
                    ))
                  }
                </div>
              </div>
            </div>
          </div>
        </section>

        <section class="grid grid-cols-1 gap-8 md:grid-cols-2">
          <div
            class="rounded-xl border border-slate-100 bg-white p-6 shadow-sm dark:border-slate-800 dark:bg-slate-900"
          >
            <h2
              class="mb-4 flex items-center gap-2 text-lg font-bold text-slate-800 dark:text-slate-200"
            >
              <span class="material-symbols-outlined text-sm text-primary"
                >verified</span
              >
              資格・学習
            </h2>
            <ul class="space-y-3 text-sm">
              {
                certifications.map((item) => (
                  <li class="flex items-baseline justify-between gap-4 border-b border-slate-100 pb-3 last:border-none last:pb-0 dark:border-slate-800">
                    <span class="font-medium text-slate-700 dark:text-slate-200">
                      {item.name}
                    </span>
                    <span class="whitespace-nowrap text-slate-500 dark:text-slate-400">
                      {item.yearMonth}
                    </span>
                  </li>
                ))
              }
            </ul>
          </div>

          <div
            class="rounded-xl border border-slate-100 bg-white p-6 shadow-sm dark:border-slate-800 dark:bg-slate-900"
          >
            <h2
              class="mb-4 flex items-center gap-2 text-lg font-bold text-slate-800 dark:text-slate-200"
            >
              <span class="material-symbols-outlined text-sm text-primary"
                >handshake</span
              >
              副業・コミュニティ
            </h2>
            <div class="space-y-5">
              {
                sideWork.map((item) => (
                  <article class="rounded-lg border border-slate-100 bg-slate-50 p-4 dark:border-slate-800 dark:bg-slate-800/40">
                    <div class="flex flex-col gap-1 sm:flex-row sm:items-baseline sm:justify-between">
                      <h3 class="font-semibold text-slate-800 dark:text-slate-100">
                        {item.org}
                      </h3>
                      <span class="text-xs font-medium text-slate-500 dark:text-slate-400">
                        {item.period}
                      </span>
                    </div>
                    <div class="mt-1 text-sm font-medium text-primary">
                      {item.role}
                    </div>
                    <p class="mt-2 text-sm leading-relaxed text-slate-600 dark:text-slate-300">
                      {item.summary}
                    </p>
                  </article>
                ))
              }
            </div>
          </div>
        </section>

        <div class="flex w-full justify-center py-2">
          <div
            class="h-px w-full max-w-[200px] bg-gradient-to-r from-transparent via-slate-300 to-transparent dark:via-slate-700"
          >
          </div>
        </div>

        <section class="flex flex-col gap-8 pb-10">
          <div
            class="flex items-center justify-between border-b border-slate-200 pb-4 dark:border-slate-800"
          >
            <h2
              class="flex items-center gap-3 text-2xl font-bold tracking-tight text-slate-900 dark:text-white"
            >
              <span class="material-symbols-outlined text-primary"
                >psychology</span
              >
              仕事観
            </h2>
          </div>
          <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
            {
              mindsetCards.map((card) => (
                <article class="group relative flex flex-col gap-4 rounded-xl border border-slate-100 bg-white p-8 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-lg dark:border-slate-800 dark:bg-slate-900">
                  <div class="absolute left-0 top-0 h-1 w-full rounded-t-xl bg-primary/20 transition-colors group-hover:bg-primary" />
                  <div class="mb-2 flex size-12 items-center justify-center rounded-lg bg-primary/10 text-primary">
                    <span class="material-symbols-outlined text-3xl">
                      {card.icon}
                    </span>
                  </div>
                  <h3 class="text-xl font-bold text-slate-900 dark:text-white">
                    {card.title}
                  </h3>
                  <p class="leading-relaxed text-slate-600 dark:text-slate-400">
                    {card.description}
                  </p>
                </article>
              ))
            }
          </div>
        </section>
      </div>
    </main>

    <SiteFooter />
  </div>
</BaseLayout>
