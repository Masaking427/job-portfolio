---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteFooter from '../components/SiteFooter.astro';
import SiteHeader from '../components/SiteHeader.astro';

const expertiseCards = [
  {
    icon: 'account_tree',
    title: 'システム思考',
    description:
      'デザインと開発の橋渡しとなる、拡張性の高いデザインライブラリと包括的なスタイルガイドを設計します。',
  },
  {
    icon: 'manage_search',
    title: 'ユーザーリサーチ',
    description:
      'データに基づく意思決定、A/Bテスト、継続的なユーザーフィードバックを通じてプロダクト改善を推進します。',
  },
  {
    icon: 'diversity_3',
    title: 'アジャイルリーダーシップ',
    description:
      '変化の速い環境で部門横断チームをリードし、短納期でも品質を担保したデザイン提供を実現します。',
  },
];

const journeyItems = [
  {
    role: 'プリンシパルプロダクトデザイナー',
    period: '2021年 - 現在',
    company: 'TechFlow Systems',
    summary: 'コアSaaSプラットフォームにおけるUX戦略を統括し、Design Systemチームをリード。',
  },
  {
    role: 'シニアUX/UIデザイナー',
    period: '2018年 - 2021年',
    company: 'InnovateCorp',
    summary: 'モバイルアプリのリデザインを主導し、初期コンポーネントライブラリを構築。',
  },
  {
    role: 'プロダクトデザイナー',
    period: '2015年 - 2018年',
    company: 'Creative Solutions Agency',
    summary: 'Fintech・ヘルスケア領域の複数クライアントに対して、要件定義からUI実装まで一気通貫で担当。',
  },
];

const skills = [
  'Figma & FigJam',
  'Design Systems',
  'Prototyping',
  'HTML/CSS Knowledge',
  'Accessibility (WCAG 2.1)',
  'Usability Testing',
  'Agile/Scrum',
  'User Flows',
  'Interaction Design',
  'Jira & Linear',
];

const achievements = [
  {
    value: '+40%',
    detail: 'TechFlowのチェックアウト導線改善により、CVRが40%向上。',
    iconClass: 'bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-300',
  },
  {
    value: '10k+ MAU',
    detail: 'アプリ再リリース後6カ月で、月間アクティブユーザー10,000人以上を達成。',
    iconClass: 'bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-300',
  },
  {
    value: '30% Faster',
    detail: 'FigmaでのDesign System整備により、開発着手までのリードタイムを30%短縮。',
    iconClass: 'bg-purple-100 dark:bg-purple-900 text-purple-600 dark:text-purple-300',
  },
];

---

<BaseLayout
  title="職務要約"
  bodyClass="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 min-h-screen flex flex-col font-display antialiased selection:bg-primary/20 selection:text-primary"
>
  <SiteHeader currentPath="/" />

  <main class="flex-grow">
    <section class="mx-auto max-w-7xl px-4 pb-16 pt-20 sm:px-6 md:pb-24 md:pt-32 lg:px-8">
      <div class="max-w-4xl">
        <div class="mb-6 inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold text-primary">
          <span class="relative flex h-2 w-2">
            <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-primary opacity-75"></span>
            <span class="relative inline-flex h-2 w-2 rounded-full bg-primary"></span>
          </span>
          面談・面接受付中
        </div>
        <h1 class="mb-8 text-4xl font-black leading-[1.1] tracking-tight text-slate-900 dark:text-white md:text-6xl lg:text-7xl">
          シニアプロダクトデザイナー &amp; <br class="hidden md:block" />UXストラテジスト
        </h1>
        <p class="max-w-2xl text-lg leading-relaxed text-slate-600 dark:text-slate-400 md:text-xl">
          拡張性の高いデジタルプロダクト設計を専門とし、8年以上にわたり複雑な情報を直感的な体験へ変換。
          B2B/B2C双方で、事業成果とユーザー価値を両立するUI/UXを推進してきました。
        </p>
      </div>
    </section>

    <section id="expertise" class="border-y border-slate-100 bg-white py-16 dark:border-slate-800/50 dark:bg-slate-900">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-12 flex flex-col items-start justify-between gap-4 md:flex-row md:items-end">
          <div>
            <h2 class="mb-2 text-2xl font-bold tracking-tight text-slate-900 dark:text-white">強み</h2>
            <p class="text-slate-500 dark:text-slate-400">
              再現性の高いプロセスで、事業インパクトにつながるデザインを提供します。
            </p>
          </div>
        </div>
        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
          {
            expertiseCards.map((card) => (
              <article class="group relative rounded-xl border border-slate-200 bg-slate-50 p-6 transition-all hover:border-primary/30 hover:shadow-lg dark:border-slate-700 dark:bg-slate-800/50">
                <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-lg bg-white shadow-sm transition-transform duration-300 group-hover:scale-110 dark:bg-slate-700">
                  <span class="material-symbols-outlined text-2xl text-primary">{card.icon}</span>
                </div>
                <h3 class="mb-3 text-lg font-bold text-slate-900 dark:text-white">{card.title}</h3>
                <p class="text-sm leading-relaxed text-slate-600 dark:text-slate-400">{card.description}</p>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <section id="journey" class="mx-auto max-w-7xl px-4 py-20 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-12 lg:gap-20">
        <div class="flex flex-col gap-16 lg:col-span-8">
          <div>
            <h2 class="mb-8 flex items-center gap-3 text-2xl font-bold tracking-tight text-slate-900 dark:text-white">
              <span class="material-symbols-outlined text-primary">history_edu</span>
              職務経歴
            </h2>
            <div class="relative ml-3 space-y-12 border-l-2 border-slate-200 dark:border-slate-700">
              {
                journeyItems.map((item) => (
                  <article class="group relative pl-8 md:pl-12">
                    <div class="absolute -left-[9px] top-1.5 h-4 w-4 rounded-full border-2 border-slate-200 bg-white transition-colors group-hover:border-primary group-hover:bg-primary dark:border-slate-700 dark:bg-slate-900"></div>
                    <div class="mb-2 flex flex-col sm:flex-row sm:items-baseline sm:justify-between">
                      <h3 class="text-xl font-bold text-slate-900 dark:text-white">{item.role}</h3>
                      <span class="mt-2 whitespace-nowrap rounded-full bg-slate-100 px-3 py-1 text-sm font-medium text-slate-500 dark:bg-slate-800 dark:text-slate-400 sm:mt-0">
                        {item.period}
                      </span>
                    </div>
                    <div class="mb-2 text-base font-semibold text-primary">{item.company}</div>
                    <p class="max-w-2xl text-sm text-slate-600 dark:text-slate-400">{item.summary}</p>
                  </article>
                ))
              }
            </div>
          </div>

          <div>
            <h2 class="mb-6 flex items-center gap-3 text-2xl font-bold tracking-tight text-slate-900 dark:text-white">
              <span class="material-symbols-outlined text-primary">psychology</span>
              技術スキル
            </h2>
            <div class="flex flex-wrap gap-2">
              {
                skills.map((skill) => (
                  <span class="cursor-default rounded-lg border border-transparent bg-slate-100 px-4 py-2 text-sm font-medium text-slate-700 transition-colors hover:border-slate-300 dark:bg-slate-800 dark:text-slate-300 dark:hover:border-slate-600">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
        </div>

        <aside id="achievements" class="lg:col-span-4">
          <div class="sticky top-24 rounded-2xl border border-primary/10 bg-primary/5 p-8 dark:border-slate-700 dark:bg-slate-800/30">
            <h2 class="mb-6 flex items-center gap-2 text-xl font-bold tracking-tight text-slate-900 dark:text-white">
              <span class="material-symbols-outlined text-primary">trending_up</span>
              主な実績
            </h2>
            <ul class="flex flex-col gap-6">
              {
                achievements.map((item) => (
                  <li class="flex gap-4">
                    <div class="mt-1 flex-none">
                      <span class={`flex h-6 w-6 items-center justify-center rounded-full ${item.iconClass}`}>
                        <span class="material-symbols-outlined text-[16px]">check</span>
                      </span>
                    </div>
                    <div>
                      <strong class="block text-lg font-bold text-slate-900 dark:text-white">{item.value}</strong>
                      <span class="text-sm text-slate-600 dark:text-slate-400">{item.detail}</span>
                    </div>
                  </li>
                ))
              }
            </ul>
            <div class="mt-8 border-t border-slate-200 pt-8 dark:border-slate-700">
              <p class="mb-4 text-sm text-slate-500 dark:text-slate-400">
                詳細なケーススタディをご希望ですか？
              </p>
              <button class="flex w-full items-center justify-center gap-2 rounded-lg bg-slate-900 px-4 py-3 text-sm font-bold text-white shadow transition-opacity hover:opacity-90 dark:bg-white dark:text-slate-900">
                <span class="material-symbols-outlined text-[18px]">lock</span>
                閲覧を申請する
              </button>
            </div>
          </div>
        </aside>
      </div>
    </section>
  </main>

  <SiteFooter />
</BaseLayout>
